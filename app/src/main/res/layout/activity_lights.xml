<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgreen"
    tools:context=".ui.lights.LightsActivity">

        <GridLayout
            android:id="@+id/lightsLayout"
            android:layout_width="384dp"
            android:layout_height="737dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="30dp"
            android:columnCount="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.081">


                <androidx.cardview.widget.CardView
                    android:id="@+id/grid_element_cardwiev_cucina"
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="5dp"
                    android:layout_marginVertical="25dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardElevation="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/grid_element_image_cucina"
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="5dp"
                                    android:padding="5dp"
                                    android:src="@drawable/baseline_emoji_objects_24" />

                                <TextView
                                    android:id="@+id/grid_element_text_cucina"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="5dp"
                                    android:padding="5dp"
                                    android:text="Cucina"
                                    android:textAlignment="center"
                                    android:textColor="@color/black" />
                        </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/grid_element_cardwiev_sala"
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="5dp"
                    android:layout_marginVertical="25dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardElevation="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/grid_element_image_sala"
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="5dp"
                                    android:padding="5dp"
                                    android:src="@drawable/baseline_emoji_objects_24" />

                                <TextView
                                    android:id="@+id/grid_element_text_sala"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="5dp"
                                    android:padding="5dp"
                                    android:text="Sala"
                                    android:textAlignment="center"
                                    android:textColor="@color/black" />
                        </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/grid_element_cardwiev_soppalco"
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="5dp"
                    android:layout_marginVertical="25dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardElevation="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/grid_element_image_soppalco"
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="5dp"
                                    android:padding="5dp"
                                    android:src="@drawable/baseline_emoji_objects_24" />

                                <TextView
                                    android:id="@+id/grid_element_text_soppalco"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="5dp"
                                    android:padding="5dp"
                                    android:text="Soppalco"
                                    android:textAlignment="center"
                                    android:textColor="@color/black" />
                        </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/grid_element_cardwiev_bagno"
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="5dp"
                    android:layout_marginVertical="25dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardElevation="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/grid_element_image_bagno"
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="5dp"
                                    android:padding="5dp"
                                    android:src="@drawable/baseline_emoji_objects_24" />

                                <TextView
                                    android:id="@+id/grid_element_text_bagno"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="5dp"
                                    android:padding="5dp"
                                    android:text="Bagno"
                                    android:textAlignment="center"
                                    android:textColor="@color/black" />
                        </LinearLayout>

                </androidx.cardview.widget.CardView>

        </GridLayout>

        <ImageButton
            android:id="@+id/microphone"
            android:layout_width="145dp"
            android:layout_height="120dp"
            android:layout_marginBottom="56dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Voice Command"
            android:padding="5dp"
            android:src="@drawable/microphone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.984"
            app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>